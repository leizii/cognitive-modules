{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "ui-spec-generator/input",
  "title": "UI Spec Generator Input",
  "description": "Product page requirement input for generating UI specifications",
  "type": "object",
  "required": ["page_context", "features", "content_requirements"],
  "additionalProperties": false,
  "properties": {
    "page_context": {
      "type": "object",
      "description": "Context and purpose of the page",
      "required": ["page_type", "purpose", "target_audience"],
      "additionalProperties": false,
      "properties": {
        "page_type": {
          "type": "string",
          "description": "Type of product page (e.g., landing, product-detail, checkout, dashboard)",
          "minLength": 1
        },
        "purpose": {
          "type": "string",
          "description": "Primary goal or purpose of the page",
          "minLength": 10
        },
        "target_audience": {
          "type": "array",
          "description": "Target user personas or audience segments",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "minItems": 1
        },
        "platform": {
          "type": "string",
          "description": "Target platform (web, mobile-web, hybrid)",
          "enum": ["web", "mobile-web", "hybrid"],
          "default": "web"
        }
      }
    },
    "features": {
      "type": "array",
      "description": "Required features and functionality",
      "items": {
        "type": "object",
        "required": ["name", "description", "priority"],
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string",
            "description": "Feature name",
            "minLength": 1
          },
          "description": {
            "type": "string",
            "description": "Feature description and expected behavior",
            "minLength": 10
          },
          "priority": {
            "type": "string",
            "enum": ["must-have", "should-have", "nice-to-have"],
            "description": "Feature priority level"
          },
          "user_stories": {
            "type": "array",
            "description": "Related user stories",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "minItems": 1
    },
    "content_requirements": {
      "type": "object",
      "description": "Content that must appear on the page",
      "required": ["sections"],
      "additionalProperties": false,
      "properties": {
        "sections": {
          "type": "array",
          "description": "Required content sections",
          "items": {
            "type": "object",
            "required": ["name", "content_type"],
            "additionalProperties": false,
            "properties": {
              "name": {
                "type": "string",
                "minLength": 1
              },
              "content_type": {
                "type": "string",
                "enum": ["text", "media", "interactive", "data-display", "form", "navigation", "mixed"]
              },
              "required_elements": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "optional_elements": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          },
          "minItems": 1
        },
        "copy_guidelines": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "tone": {
              "type": "string",
              "description": "Voice and tone guidelines"
            },
            "max_heading_length": {
              "type": "integer",
              "minimum": 10
            },
            "max_paragraph_length": {
              "type": "integer",
              "minimum": 50
            }
          }
        }
      }
    },
    "design_tokens": {
      "type": "object",
      "description": "Provided design tokens (colors, typography, spacing). Optional.",
      "additionalProperties": false,
      "properties": {
        "colors": {
          "type": "object",
          "additionalProperties": {
            "type": "string",
            "pattern": "^#[0-9A-Fa-f]{6}$|^rgb\\(|^hsl\\("
          }
        },
        "typography": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "font_families": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            },
            "font_sizes": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            },
            "line_heights": {
              "type": "object",
              "additionalProperties": {
                "type": "number"
              }
            }
          }
        },
        "spacing": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "breakpoints": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      }
    },
    "constraints": {
      "type": "object",
      "description": "Technical or business constraints",
      "additionalProperties": false,
      "properties": {
        "browser_support": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "performance_budget": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "max_load_time_ms": {
              "type": "integer",
              "minimum": 100
            },
            "max_bundle_size_kb": {
              "type": "integer",
              "minimum": 10
            }
          }
        },
        "accessibility_level": {
          "type": "string",
          "enum": ["WCAG-A", "WCAG-AA", "WCAG-AAA"],
          "default": "WCAG-AA"
        },
        "internationalization": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "existing_patterns": {
      "type": "array",
      "description": "Existing UI patterns or components to reuse",
      "items": {
        "type": "object",
        "required": ["name", "usage"],
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string"
          },
          "usage": {
            "type": "string"
          }
        }
      }
    }
  }
}
