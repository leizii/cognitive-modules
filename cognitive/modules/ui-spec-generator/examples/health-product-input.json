      {
        "name": "痛点共鸣",
        "content_type": "data-display",
        "required_elements": ["场景卡片", "场景图标", "场景描述"]
      },
      {
        "name": "产品展示",
        "content_type": "data-display",
        "required_elements": ["产品卡片", "产品图片", "产品名称", "核心功效", "价格", "购买按钮"]
      },
      {
        "name": "科学背书",
        "content_type": "mixed",
        "required_elements": ["成分介绍", "研究数据", "认证标识"],
        "optional_elements": ["合作机构logo", "论文引用"]
      },
      {
        "name": "用户评价",
        "content_type": "data-display",
        "required_elements": ["评价卡片", "用户头像", "用户信息", "评价内容", "评分"]
      },
      {
        "name": "专家团队",
        "content_type": "data-display",
        "required_elements": ["专家卡片", "头像", "姓名", "头衔", "简介"]
      },
      {
        "name": "使用指南",
        "content_type": "data-display",
        "required_elements": ["步骤说明", "图示"]
      },
      {
        "name": "FAQ",
        "content_type": "interactive",
        "required_elements": ["问题列表", "展开/收起答案"]
      },
      {
        "name": "转化CTA",
        "content_type": "form",
        "required_elements": ["标题", "优惠信息", "购买按钮"],
        "optional_elements": ["邮箱订阅", "咨询表单"]
      },
      {
        "name": "页脚",
        "content_type": "navigation",
        "required_elements": ["链接分组", "联系方式", "社交媒体", "版权信息"],
        "optional_elements": ["订阅入口", "认证标识"]
      }
