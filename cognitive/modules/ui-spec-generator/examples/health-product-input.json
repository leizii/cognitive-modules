    "copy_guidelines": {
      "tone": "专业、温暖、赋能感，避免过度营销，强调科学和关怀",
      "max_heading_length": 50,
      "max_paragraph_length": 120
    }
  },
  "constraints": {
    "browser_support": ["Chrome 90+", "Firefox 88+", "Safari 14+", "Edge 90+", "微信内置浏览器"],
    "performance_budget": {
      "max_load_time_ms": 3000,
      "max_bundle_size_kb": 600
