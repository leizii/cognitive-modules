        "optional_elements": ["语言切换", "搜索"]
      },
      {
        "name": "Hero首屏",
        "content_type": "mixed",
        "required_elements": ["主标题", "副标题", "CTA按钮", "品牌视觉/视频"],
        "optional_elements": ["信任标识（认证、媒体报道）"]
