  "rationale": {
    "decisions": [
      {
        "aspect": "信息架构",
        "decision": "采用11个区块的长滚动单页结构",
        "reasoning": "健康产品需要建立信任，用户需要充分了解产品、科学依据、他人评价后才会购买。长页面符合「认知-兴趣-信任-行动」的转化漏斗。",
        "alternatives_considered": ["多页面结构", "Tab切换内容"],
        "tradeoffs": ["页面较长可能增加跳出率", "需要优化懒加载保证性能"]
      },
      {
        "aspect": "痛点共鸣区位置",
        "decision": "放在Hero之后、产品之前",
        "reasoning": "先让用户感受到「品牌理解我」，产生情感共鸣后再看产品，转化率更高。这是经典的PAS（Problem-Agitate-Solution）文案结构。",
        "alternatives_considered": ["痛点融入Hero", "痛点放在产品之后"],
        "tradeoffs": ["增加页面长度"]
      },
      {
        "aspect": "产品展示方式",
        "decision": "使用轮播而非网格",
        "reasoning": "精英用户时间宝贵，轮播可以聚焦单品，支持快速浏览。同时支持移动端友好的滑动交互。",
        "alternatives_considered": ["产品网格", "产品列表"],
        "tradeoffs": ["部分产品可能被忽视", "需要明确的轮播控件引导"]
      },
      {
        "aspect": "科学背书区设计",
        "decision": "包含成分卡片、数据统计、认证标识三个模块",
        "reasoning": "25-45岁精英人群偏理性消费，需要数据和权威背书。成分透明度是健康食品的核心信任点。",
        "alternatives_considered": ["仅展示认证", "深度论文引用"],
        "tradeoffs": ["信息量大需要控制篇幅"]
      },
      {
        "aspect": "CTA策略",
        "decision": "提供「立即购买」和「预约咨询」双路径",
        "reasoning": "健康产品决策周期可能较长，提供咨询选项可以捕获还在考虑的高意向用户。",
        "alternatives_considered": ["仅购买按钮", "仅咨询表单"],
        "tradeoffs": ["双CTA可能分散注意力"]
      },
      {
        "aspect": "FAQ设计",
        "decision": "采用折叠手风琴组件",
        "reasoning": "FAQ内容多，折叠设计节省空间，用户可以快速定位关心的问题。",
        "alternatives_considered": ["全部展开", "分页Tab"],
        "tradeoffs": ["需要点击才能看到答案"]
      }
    ],
