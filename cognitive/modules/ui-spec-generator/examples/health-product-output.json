{
  "specification": {
    "information_architecture": {
      "sections": [
        {
          "id": "nav",
          "name": "导航栏",
          "purpose": "主导航和品牌标识入口",
          "order": 0,
          "parent_section_id": null,
          "visibility": "always"
        },
        {
          "id": "hero",
          "name": "Hero首屏",
          "purpose": "传达品牌核心价值主张，建立第一印象",
          "order": 1,
          "parent_section_id": null,
          "visibility": "always"
        },
        {
          "id": "pain-points",
          "name": "痛点共鸣",
          "purpose": "展示目标用户的压力场景，引发情感共鸣",
          "order": 2,
          "parent_section_id": null,
          "visibility": "always"
        },
        {
          "id": "products",
          "name": "产品系列",
          "purpose": "展示产品线，帮助用户找到适合的产品",
          "order": 3,
          "parent_section_id": null,
          "visibility": "always"
        },
        {
          "id": "science",
          "name": "科学背书",
          "purpose": "展示成分、研究和认证，建立信任",
          "order": 4,
          "parent_section_id": null,
          "visibility": "always"
        },
        {
          "id": "testimonials",
          "name": "用户评价",
          "purpose": "通过真实案例增强可信度",
          "order": 5,
          "parent_section_id": null,
          "visibility": "always"
        },
        {
          "id": "experts",
          "name": "专家团队",
          "purpose": "展示专业背景，强化品牌权威",
          "order": 6,
          "parent_section_id": null,
          "visibility": "always"
        },
        {
          "id": "how-to-use",
          "name": "使用指南",
          "purpose": "指导用户正确使用产品",
          "order": 7,
          "parent_section_id": null,
          "visibility": "always"
        },
        {
          "id": "faq",
          "name": "常见问题",
          "purpose": "解答疑虑，消除购买障碍",
          "order": 8,
          "parent_section_id": null,
          "visibility": "always"
        },
        {
          "id": "cta-section",
          "name": "转化CTA",
          "purpose": "推动用户完成购买或咨询行动",
          "order": 9,
          "parent_section_id": null,
          "visibility": "always"
        },
        {
          "id": "footer",
          "name": "页脚",
          "purpose": "次级导航、联系方式和法律信息",
          "order": 10,
          "parent_section_id": null,
          "visibility": "always"
        }
      ],
      "hierarchy": {
        "root": [
          { "section_id": "nav" },
          { "section_id": "hero" },
          { "section_id": "pain-points" },
          { "section_id": "products" },
          { "section_id": "science" },
          { "section_id": "testimonials" },
          { "section_id": "experts" },
          { "section_id": "how-to-use" },
          { "section_id": "faq" },
          { "section_id": "cta-section" },
          { "section_id": "footer" }
        ]
      },
      "navigation_flow": [
        { "from": "hero", "to": "products", "trigger": "click" },
        { "from": "hero", "to": "pain-points", "trigger": "scroll" },
        { "from": "pain-points", "to": "products", "trigger": "scroll" },
        { "from": "products", "to": "cta-section", "trigger": "click" },
        { "from": "science", "to": "products", "trigger": "click" },
        { "from": "faq", "to": "cta-section", "trigger": "click" }
      ]
    },
    "components": [
      {
        "id": "nav-bar",
        "type": "navigation",
        "section_id": "nav",
        "props": [
          { "name": "logo", "type": "node", "required": true, "description": "品牌Logo" },
          { "name": "links", "type": "array", "required": true, "description": "导航链接（产品、科学、关于我们、FAQ）" },
          { "name": "ctaButton", "type": "node", "required": true, "description": "购买按钮" },
          { "name": "isSticky", "type": "boolean", "required": false, "default_value": true }
        ],
        "states": [
          { "name": "default", "description": "正常导航状态" },
          { "name": "expanded", "description": "移动端菜单展开", "visual_changes": ["抽屉菜单可见", "汉堡图标变X"] },
          { "name": "collapsed", "description": "移动端菜单收起" }
        ]
      },
      {
        "id": "hero-section",
        "type": "hero",
        "section_id": "hero",
        "props": [
          { "name": "headline", "type": "string", "required": true, "description": "主标题，如"重拾内心平静，唤醒身体复原力"" },
          { "name": "subheadline", "type": "string", "required": true, "description": "副标题，阐述产品价值" },
          { "name": "primaryCta", "type": "object", "required": true, "description": "主CTA按钮配置" },
          { "name": "secondaryCta", "type": "object", "required": false, "description": "次级CTA（了解更多）" },
          { "name": "backgroundMedia", "type": "string", "required": true, "description": "背景图/视频URL" },
          { "name": "trustBadges", "type": "array", "required": false, "description": "信任标识（FDA认证、有机认证等）" }
        ],
        "states": [
          { "name": "default", "description": "正常展示" },
          { "name": "loading", "description": "视频加载中", "visual_changes": ["显示占位图"] }
        ]
      },
      {
        "id": "pain-point-card",
        "type": "card",
        "section_id": "pain-points",
        "props": [
          { "name": "icon", "type": "node", "required": true, "description": "场景图标" },
          { "name": "title", "type": "string", "required": true, "description": "场景标题，如"深夜加班后难以入睡"" },
          { "name": "description", "type": "string", "required": true, "description": "场景描述" }
        ],
        "states": [
          { "name": "default", "description": "正常卡片" },
          { "name": "hover", "description": "悬停状态", "visual_changes": ["轻微上浮", "阴影加深"] }
        ]
      },
      {
        "id": "pain-points-grid",
        "type": "grid",
        "section_id": "pain-points",
        "props": [
          { "name": "items", "type": "array", "required": true, "description": "痛点卡片数据数组" },
          { "name": "columns", "type": "number", "required": false, "default_value": 4 }
        ],
        "states": [
          { "name": "default", "description": "网格布局" }
        ],
        "children": ["pain-point-card"]
      },
      {
        "id": "product-card",
        "type": "card",
        "section_id": "products",
        "props": [
          { "name": "image", "type": "string", "required": true, "description": "产品图片URL" },
          { "name": "name", "type": "string", "required": true, "description": "产品名称" },
          { "name": "tagline", "type": "string", "required": true, "description": "核心功效一句话" },
          { "name": "keyIngredients", "type": "array", "required": true, "description": "主要成分标签" },
          { "name": "price", "type": "object", "required": true, "description": "价格信息（原价、现价）" },
          { "name": "ctaLabel", "type": "string", "required": false, "default_value": "立即购买" }
        ],
        "states": [
          { "name": "default", "description": "正常展示" },
          { "name": "hover", "description": "悬停", "visual_changes": ["图片轻微放大", "显示快速查看按钮"] },
          { "name": "focus", "description": "键盘聚焦", "visual_changes": ["焦点环可见"] }
        ],
        "variants": [
          { "name": "featured", "description": "主推产品，更大尺寸" },
          { "name": "compact", "description": "紧凑版本" }
        ]
      },
      {
        "id": "products-carousel",
        "type": "carousel",
        "section_id": "products",
        "props": [
          { "name": "items", "type": "array", "required": true, "description": "产品数据数组" },
          { "name": "showArrows", "type": "boolean", "required": false, "default_value": true },
          { "name": "showDots", "type": "boolean", "required": false, "default_value": true },
          { "name": "autoPlay", "type": "boolean", "required": false, "default_value": false }
        ],
        "states": [
          { "name": "default", "description": "静止" },
          { "name": "active", "description": "滑动中", "visual_changes": ["过渡动画"] }
        ],
        "children": ["product-card"]
      },
      {
        "id": "ingredient-card",
        "type": "card",
        "section_id": "science",
        "props": [
          { "name": "name", "type": "string", "required": true, "description": "成分名称（如GABA、茶氨酸）" },
          { "name": "icon", "type": "node", "required": true, "description": "成分图标/分子结构" },
          { "name": "benefit", "type": "string", "required": true, "description": "功效说明" },
          { "name": "dosage", "type": "string", "required": false, "description": "含量" },
          { "name": "researchLink", "type": "string", "required": false, "description": "研究论文链接" }
        ],
        "states": [
          { "name": "default", "description": "正常展示" },
          { "name": "expanded", "description": "展开详情", "visual_changes": ["显示更多研究信息"] }
        ]
      },
      {
        "id": "science-stats",
        "type": "stats-bar",
        "section_id": "science",
        "props": [
          { "name": "stats", "type": "array", "required": true, "description": "统计数据数组（如：92%用户感到改善）" }
        ],
        "states": [
          { "name": "default", "description": "正常展示" },
          { "name": "loading", "description": "数字动画加载", "visual_changes": ["数字滚动动画"] }
        ]
      },
      {
        "id": "certification-badges",
        "type": "badge-group",
        "section_id": "science",
        "props": [
          { "name": "badges", "type": "array", "required": true, "description": "认证标识数组（GMP、有机认证、第三方检测）" }
        ],
        "states": [
          { "name": "default", "description": "正常展示" }
        ]
      },
      {
        "id": "testimonial-card",
        "type": "card",
        "section_id": "testimonials",
        "props": [
          { "name": "quote", "type": "string", "required": true, "description": "用户评价内容" },
          { "name": "authorName", "type": "string", "required": true },
          { "name": "authorTitle", "type": "string", "required": true, "description": "职业/身份" },
          { "name": "authorPhoto", "type": "string", "required": false },
          { "name": "rating", "type": "number", "required": true, "description": "评分1-5" },
          { "name": "productUsed", "type": "string", "required": false, "description": "使用的产品" },
          { "name": "beforeAfter", "type": "object", "required": false, "description": "使用前后对比" }
        ],
        "states": [
          { "name": "default", "description": "正常展示" }
        ]
      },
      {
        "id": "testimonials-slider",
        "type": "carousel",
        "section_id": "testimonials",
        "props": [
          { "name": "items", "type": "array", "required": true },
          { "name": "showRating", "type": "boolean", "required": false, "default_value": true }
        ],
        "states": [
          { "name": "default", "description": "静止" },
          { "name": "active", "description": "切换中" }
        ],
        "children": ["testimonial-card"]
      },
      {
        "id": "expert-card",
        "type": "card",
        "section_id": "experts",
        "props": [
          { "name": "photo", "type": "string", "required": true, "description": "专家头像" },
          { "name": "name", "type": "string", "required": true },
          { "name": "title", "type": "string", "required": true, "description": "头衔/职位" },
          { "name": "credentials", "type": "array", "required": true, "description": "资质列表" },
          { "name": "bio", "type": "string", "required": true, "description": "简介" }
        ],
        "states": [
          { "name": "default", "description": "正常展示" },
          { "name": "hover", "description": "悬停显示更多信息" }
        ]
      },
      {
        "id": "experts-grid",
        "type": "grid",
        "section_id": "experts",
        "props": [
          { "name": "items", "type": "array", "required": true },
          { "name": "columns", "type": "number", "required": false, "default_value": 3 }
        ],
        "states": [
          { "name": "default", "description": "网格布局" }
        ],
        "children": ["expert-card"]
      },
      {
        "id": "usage-step",
        "type": "step-card",
        "section_id": "how-to-use",
        "props": [
          { "name": "stepNumber", "type": "number", "required": true },
          { "name": "title", "type": "string", "required": true, "description": "步骤标题" },
          { "name": "description", "type": "string", "required": true },
          { "name": "icon", "type": "node", "required": true },
          { "name": "timing", "type": "string", "required": false, "description": "建议时间（如：睡前30分钟）" }
        ],
        "states": [
          { "name": "default", "description": "正常展示" },
          { "name": "active", "description": "当前步骤高亮" }
        ]
      },
      {
        "id": "usage-timeline",
        "type": "timeline",
        "section_id": "how-to-use",
        "props": [
          { "name": "steps", "type": "array", "required": true },
          { "name": "orientation", "type": "string", "required": false, "default_value": "horizontal" }
        ],
        "states": [
          { "name": "default", "description": "正常展示" }
        ],
        "children": ["usage-step"]
      },
      {
        "id": "faq-item",
        "type": "accordion-item",
        "section_id": "faq",
        "props": [
          { "name": "question", "type": "string", "required": true },
          { "name": "answer", "type": "string", "required": true },
          { "name": "isOpen", "type": "boolean", "required": false, "default_value": false }
        ],
        "states": [
          { "name": "collapsed", "description": "问题收起" },
          { "name": "expanded", "description": "答案展开", "visual_changes": ["内容可见", "图标旋转"] }
        ]
      },
      {
        "id": "faq-accordion",
        "type": "accordion",
        "section_id": "faq",
        "props": [
          { "name": "items", "type": "array", "required": true },
          { "name": "allowMultiple", "type": "boolean", "required": false, "default_value": false }
        ],
        "states": [
          { "name": "default", "description": "正常展示" }
        ],
        "children": ["faq-item"]
      },
      {
        "id": "cta-banner",
        "type": "banner",
        "section_id": "cta-section",
        "props": [
          { "name": "headline", "type": "string", "required": true, "description": "转化标题" },
          { "name": "subheadline", "type": "string", "required": false },
          { "name": "offerText", "type": "string", "required": false, "description": "优惠信息" },
          { "name": "primaryCta", "type": "object", "required": true },
          { "name": "secondaryCta", "type": "object", "required": false },
          { "name": "backgroundStyle", "type": "string", "required": false, "default_value": "gradient" }
        ],
        "states": [
          { "name": "default", "description": "正常展示" }
        ]
      },
      {
        "id": "purchase-button",
        "type": "button",
        "section_id": "cta-section",
        "props": [
          { "name": "label", "type": "string", "required": true, "default_value": "立即购买" },
          { "name": "variant", "type": "string", "required": false, "default_value": "primary" },
          { "name": "size", "type": "string", "required": false, "default_value": "large" },
          { "name": "href", "type": "string", "required": true }
        ],
        "states": [
          { "name": "default", "description": "正常按钮" },
          { "name": "hover", "description": "悬停", "visual_changes": ["背景加亮", "轻微放大"] },
          { "name": "focus", "description": "键盘聚焦", "visual_changes": ["焦点环"] },
          { "name": "active", "description": "点击中" },
          { "name": "loading", "description": "跳转中", "visual_changes": ["显示加载指示器"] }
        ]
      },
      {
        "id": "consultation-form",
        "type": "form",
        "section_id": "cta-section",
        "props": [
          { "name": "headline", "type": "string", "required": true, "description": "表单标题" },
          { "name": "fields", "type": "array", "required": true, "description": "表单字段配置" },
          { "name": "submitLabel", "type": "string", "required": false, "default_value": "预约咨询" },
          { "name": "onSubmit", "type": "function", "required": true }
        ],
        "states": [
          { "name": "default", "description": "空表单" },
          { "name": "loading", "description": "提交中", "visual_changes": ["按钮显示loading", "字段禁用"] },
          { "name": "success", "description": "提交成功", "visual_changes": ["显示感谢信息"] },
          { "name": "error", "description": "提交失败", "visual_changes": ["显示错误信息"] }
        ]
      },
      {
        "id": "footer-container",
        "type": "footer",
        "section_id": "footer",
        "props": [
          { "name": "logo", "type": "node", "required": true },
          { "name": "linkGroups", "type": "array", "required": true, "description": "链接分组（产品、关于、帮助）" },
          { "name": "contactInfo", "type": "object", "required": true },
          { "name": "socialLinks", "type": "array", "required": true },
          { "name": "certifications", "type": "array", "required": false },
          { "name": "copyright", "type": "string", "required": true }
        ],
        "states": [
          { "name": "default", "description": "正常展示" }
        ]
      }
    ],
    "interactions": [
      {
        "id": "hero-cta-click",
        "trigger": "hero-section",
        "event": "click",
        "action": "跳转到产品列表或购买页面",
        "target": "products",
        "transition": {
          "type": "custom",
          "duration_ms": 600,
          "easing": "ease-out"
        },
        "feedback": "平滑滚动到产品区域"
      },
      {
        "id": "product-card-hover",
        "trigger": "product-card",
        "event": "hover",
        "action": "显示产品快速预览效果",
        "target": "product-card",
        "transition": {
          "type": "scale",
          "duration_ms": 200,
          "easing": "ease-in-out"
        }
      },
      {
        "id": "product-card-click",
        "trigger": "product-card",
        "event": "click",
        "action": "跳转到产品详情页或打开快速购买弹窗",
        "target": "product-detail-modal",
        "transition": {
          "type": "fade",
          "duration_ms": 300
        }
      },
      {
        "id": "ingredient-expand",
        "trigger": "ingredient-card",
        "event": "click",
        "action": "展开成分详情和研究信息",
        "target": "ingredient-card",
        "transition": {
          "type": "slide",
          "duration_ms": 300,
          "easing": "ease-out"
        }
      },
      {
        "id": "faq-toggle",
        "trigger": "faq-item",
        "event": "click",
        "action": "展开/收起FAQ答案",
        "target": "faq-item",
        "transition": {
          "type": "slide",
          "duration_ms": 250,
          "easing": "ease-out"
        },
        "feedback": "箭头图标旋转指示状态"
      },
      {
        "id": "testimonial-swipe",
        "trigger": "testimonials-slider",
        "event": "swipe",
        "action": "切换到下一条/上一条评价",
        "target": "testimonials-slider",
        "transition": {
          "type": "slide",
          "duration_ms": 400,
          "easing": "ease-in-out"
        }
      },
      {
        "id": "form-submit",
        "trigger": "consultation-form",
        "event": "submit",
        "action": "验证表单并提交咨询请求",
        "target": "consultation-form",
        "transition": {
          "type": "fade",
          "duration_ms": 200
        },
        "conditions": ["所有必填字段已填写", "邮箱格式正确"],
        "feedback": "提交时显示loading，成功后显示感谢信息"
      },
      {
        "id": "nav-scroll-spy",
        "trigger": "nav-bar",
        "event": "scroll",
        "action": "根据滚动位置高亮当前导航项",
        "target": "nav-bar",
        "feedback": "当前区域对应的导航链接高亮"
      },
      {
        "id": "mobile-menu-toggle",
        "trigger": "nav-bar",
        "event": "click",
        "action": "切换移动端导航菜单",
        "target": "nav-bar",
        "transition": {
          "type": "slide",
          "duration_ms": 300,
          "easing": "ease-out"
        },
        "conditions": ["视窗宽度 < 768px"]
      }
    ],
    "responsive": {
      "breakpoints": [
        { "name": "mobile", "min_width": 320, "max_width": 767 },
        { "name": "tablet", "min_width": 768, "max_width": 1023 },
        { "name": "desktop", "min_width": 1024, "max_width": 1439 },
        { "name": "wide", "min_width": 1440, "max_width": null }
      ],
      "layout_rules": [
        {
          "breakpoint": "mobile",
          "rules": [
            { "target": "nav-bar", "property": "nav-links", "value": "隐藏，通过汉堡菜单访问" },
            { "target": "pain-points-grid", "property": "grid-template-columns", "value": "1fr" },
            { "target": "products-carousel", "property": "slides-per-view", "value": "1" },
            { "target": "experts-grid", "property": "grid-template-columns", "value": "1fr" },
